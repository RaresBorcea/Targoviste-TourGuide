<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arby.tourguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PubsActivity"
            android:label="@string/category_pubs" />
        <activity
            android:name=".ParksActivity"
            android:label="@string/category_parks" />
        <activity
            android:name=".MuseumsActivity"
            android:label="@string/category_museums" />
        <activity
            android:name=".RestaurantsActivity"
            android:label="@string/category_restaurants" />
    </application>

</manifest>